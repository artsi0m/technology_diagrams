digraph {
 /* Invisible ranks */
 top [style=invisible];
 bottom [style=invisible];
 /* Make invisible (white) link between them */
 top -> bottom [color=white];

 node [shape=box];

 "Печатная плата" [color=red]
 "Печатная плата" -> "Диэлектрическое основание"
 "Печатная плата" -> "Фиксирующие отверстия"
 "Печатная плата" -> "Печатные проводники"
 "Печатная плата" -> "Контактные площадки"
 "Печатная плата" -> "Монтажные отверстия"
 "Печатная плата" -> "Экраны"
 "Печатная плата" -> "Фольговые резисторы"
	 {
	rank = same;
	bottom -> "Диэлектрическое основание" -> "Печатные проводники" -> "Контактные площадки" -> "Монтажные отверстия" [style=invis]
	rankdir = LR;
	 }

	 { 
	rank = same;
   	top -> "Экраны" -> "Фиксирующие отверстия" -> "Фольговые резисторы" [style=invis]
  	rankdir = LR;
	 }

}
